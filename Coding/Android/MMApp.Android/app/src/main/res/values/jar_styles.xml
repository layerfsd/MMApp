<resources>

    <style name="jar_pin_round_stroke">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/jar_bg_round_stroke</item>
    </style>
    
     <style name="jar_Text_pin_round">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/jar_smart_white</item>
        <!-- <item name="android:background">@drawable/jar_bg_round_big</item> -->
        <item name="android:background">@drawable/jar_pin_circle</item>
    </style>
    
     <style name="jar_comm_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    
     <style name="Jar_Theme_Dialog_FullScreen" parent="Jar_Theme_Dialog">
       <item name="android:windowFullscreen">true</item>  
        <!-- 是悬浮还是覆盖 -->
        <item name="android:windowIsFloating">false</item>
    </style>
    
     <style name="Jar_Theme_Dialog" parent="android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是悬浮还是覆盖 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有系统自带标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 去除黑色背景 -->
        <item name="android:windowBackground">@color/jar_smart_transparent</item>
        <item name="android:textColor">@color/jar_smart_black</item>
        <item name="android:textSize">17sp</item>
    </style>
    
     <style name="jar_keyboard_num">
         <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">36dp</item>
     </style>
     
     <style name="DialogPopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/jar_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/jar_push_bottom_out</item>
    </style>
    
     <style name="jar_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/jar_smart_transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="padding1">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>

    <style name="padding2">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="pin_digit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/jar_bg_pin_selector</item>
        <item name="android:textColor">@color/jar_ccb_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
